                { id: 13, name: "Lucas", code: "VC273", hasUpsideDown: false },
                { id: 14, name: "Mike", code: "VC274", hasUpsideDown: false }
            ],
            accessories: [
                { id: 15, name: "Support t√©l√©phone - Eleven", code: "VC275", type: "phone" },
                { id: 16, name: "Support t√©l√©phone - Dustin", code: "VC276", type: "phone" },
                { id: 17, name: "D√©coration crayon - Demogorgon", code: "VC277", type: "pencil" },
                { id: 18, name: "D√©coration zip - Will", code: "VC283", type: "zipper" },
                { id: 19, name: "D√©coration c√¢ble - Eleven", code: "VC284", type: "cable" },
                { id: 20, name: "Support t√©l√©phone - Max", code: "VC285", type: "phone" },
                { id: 21, name: "D√©coration crayon - Mind Flayer", code: "VC286", type: "pencil" },
                { id: 22, name: "D√©coration zip - Vecna", code: "VC287", type: "zipper" },
                { id: 23, name: "D√©coration c√¢ble - Demogorgon", code: "VC288", type: "cable" },
                { id: 24, name: "Support t√©l√©phone - Steve", code: "VC356", type: "phone" }
            ]
        };

        // State management
        const state = {
            activeTab: 'collection',
            owned: {},
            images: {},
            imageOrder: [],
            profile: {
                nom: '',
                prenom: '',
                pseudo: '',
                password: '',
                email: '',
                photo: ''
            },
            isLoggedIn: false
        };

        // Handle login
        function handleLogin() {
            const pseudo = document.getElementById('login-pseudo').value.trim();
            const password = document.getElementById('login-password').value;
            const errorEl = document.getElementById('login-error');

            if (!pseudo || !password) {
                errorEl.textContent = "Veuillez remplir tous les champs";
                errorEl.classList.remove('hidden');
                return;
            }

            // Simple validation - any non-empty credentials are accepted
            state.profile.pseudo = pseudo;
            state.profile.password = password;
            state.isLoggedIn = true;

            // Hide login screen and show main app
            document.getElementById('login-screen').style.display = 'none';
            document.getElementById('main-app').style.display = 'block';
            errorEl.classList.add('hidden');

            // Initialize the app
            renderHangables();
            renderAccessories();
            renderMissingItems();
            updateProgress();
            updateProfileDisplay();
            updateCostEstimation();
        }

        // Save profile
        function saveProfile() {
            state.profile.nom = document.getElementById('profile-nom').value;
            state.profile.prenom = document.getElementById('profile-prenom').value;
            state.profile.pseudo = document.getElementById('profile-pseudo').value;
            state.profile.password = document.getElementById('profile-password').value;
            state.profile.email = document.getElementById('profile-email').value;

            updateProfileDisplay();

            // Show success feedback
            alert('Profil mis √† jour avec succ√®s !');
        }

        // Update profile display
        function updateProfileDisplay() {
            const displayName = document.getElementById('profile-display-name');
            const displayPseudo = document.getElementById('profile-display-pseudo');

            if (state.profile.prenom || state.profile.nom) {
                displayName.textContent = `${state.profile.prenom} ${state.profile.nom}`.trim() || "Nouvel utilisateur";
            } else {
                displayName.textContent = "Nouvel utilisateur";
            }

            if (state.profile.pseudo) {
                displayPseudo.textContent = `@${state.profile.pseudo}`;
            } else {
                displayPseudo.textContent = "@utilisateur";
            }
        }

        // Tab management
        function setActiveTab(tab) {
            if (!state.isLoggedIn) return;

            state.activeTab = tab;

            // Update tab styles
            const tabs = ['collection', 'gallery', 'profile'];
            tabs.forEach(key => {
                const tabEl = document.getElementById(`${key}-tab`);
                if (key === tab) {
                    tabEl.className = 'tab-btn flex items-center gap-2 px-6 py-3 rounded-xl font-semibold bg-gray-800/50 text-white transition-all tab-active';
                } else {
                    tabEl.className = 'tab-btn flex items-center gap-2 px-6 py-3 rounded-xl font-semibold bg-gray-800/50 hover:bg-gray-800 text-white transition-all';
                }
            });

            // Show active tab content
            tabs.forEach(key => {
                document.getElementById(`${key}-tab-content`).classList.toggle('hidden', key !== tab);
            });

            if (tab === 'gallery') {
                renderGallery();
            }
        }

        // Render hangables
        function renderHangables() {
            const container = document.getElementById('hangables-container');
            container.innerHTML = '';

            collectionData.hangables.forEach(item => {
                const isOwned = state.owned[item.id] || false;
                const itemImage = state.images[item.id];

                const card = document.createElement('div');
                card.className = `card ${isOwned ? 'owned-card' : ''} p-4 transition-all`;
                card.innerHTML = `
                    <div class="flex items-start gap-3">
                        <div class="mt-1 flex items-center">
                            <input type="checkbox" ${isOwned ? 'checked' : ''} onchange="toggleOwned(${item.id})" class="w-5 h-5 cursor-pointer accent-stranger-green rounded">
                        </div>
                        <div class="flex-1">
                            <div class="flex justify-between items-start">
                                <h3 class="font-semibold ${isOwned ? 'text-stranger-emerald' : 'text-white'}">${item.name}</h3>
                                ${item.variant ? '<span class="text-xs bg-stranger-purple/20 text-stranger-purple px-2 py-0.5 rounded">Upside Down</span>' : ''}
                            </div>
                            <p class="text-xs mt-1 text-gray-400">Code: ${item.code}</p>
                            ${(item.type === 'phone') ? '<span class="inline-block mt-1 px-2 py-0.5 text-xs bg-blue-500/20 text-blue-300 rounded">üì± Support</span>' : ''}
                            ${(item.type === 'pencil') ? '<span class="inline-block mt-1 px-2 py-0.5 text-xs bg-blue-500/20 text-blue-300 rounded">‚úèÔ∏è Crayon</span>' : ''}
                            ${(item.type === 'zipper') ? '<span class="inline-block mt-1 px-2 py-0.5 text-xs bg-blue-500/20 text-blue-300 rounded">üîó Zip</span>' : ''}
                            ${(item.type === 'cable') ? '<span class="inline-block mt-1 px-2 py-0.5 text-xs bg-blue-500/20 text-blue-300 rounded">üîå C√¢ble</span>' : ''}
                            ${itemImage ? `
                                <div class="mt-3 relative">
                                    <img src="${itemImage}" alt="${item.name}" class="w-full h-24 object-cover rounded-lg border border-stranger-emerald/30">
                                    <button onclick="removeImage(${item.id})" class="absolute -top-2 -right-2 bg-stranger-red text-white w-6 h-6 rounded-full hover:bg-stranger-crimson transition-colors flex items-center justify-center" title="Supprimer l'image">
                                        <i class="fas fa-times text-xs"></i>
                                    </button>
                                </div>
                            ` : ''}
                            <div class="mt-3">
                                <label for="upload-${item.id}" class="flex items-center gap-2 px-3 py-1.5 bg-stranger-purple/80 hover:bg-stranger-purple text-white text-xs rounded cursor-pointer transition-colors w-fit">
                                    <i class="fas fa-upload text-xs"></i>
                                    ${itemImage ? 'Changer photo' : 'Ajouter photo'}
                                </label>
                                <input id="upload-${item.id}" type="file" accept="image/*" onchange="handleImageUpload(${item.id}, event)" class="hidden">
                            </div>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        // Render accessories
        function renderAccessories() {
            const container = document.getElementById('accessories-container');
            container.innerHTML = '';

            collectionData.accessories.forEach(item => {
                const isOwned = state.owned[item.id] || false;
                const itemImage = state.images[item.id];

                const card = document.createElement('div');
                card.className = `card ${isOwned ? 'owned-card' : ''} p-4 transition-all`;
                card.innerHTML = `
                    <div class="flex items-start gap-3">
                        <div class="mt-1 flex items-center">
                            <input type="checkbox" ${isOwned ? 'checked' : ''} onchange="toggleOwned(${item.id})" class="w-5 h-5 cursor-pointer accent-stranger-green rounded">
                        </div>
                        <div class="flex-1">
                            <div class="flex justify-between items-start">
                                <h3 class="font-semibold ${isOwned ? 'text-stranger-emerald' : 'text-white'}">${item.name}</h3>
                                ${item.type ? '<span class="text-xs bg-blue-500/20 text-blue-300 px-2 py-0.5 rounded">Accessoire</span>' : ''}
                            </div>
                            <p class="text-xs mt-1 text-gray-400">Code: ${item.code}</p>
                            ${itemImage ? `
                                <div class="mt-3 relative">
                                    <img src="${itemImage}" alt="${item.name}" class="w-full h-24 object-cover rounded-lg border border-stranger-emerald/30">
                                    <button onclick="removeImage(${item.id})" class="absolute -top-2 -right-2 bg-stranger-red text-white w-6 h-6 rounded-full hover:bg-stranger-crimson transition-colors flex items-center justify-center" title="Supprimer l'image">
                                        <i class="fas fa-times text-xs"></i>
                                    </button>
                                </div>
                            ` : ''}
                            <div class="mt-3">
                                <label for="upload-${item.id}" class="flex items-center gap-2 px-3 py-1.5 bg-stranger-purple/80 hover:bg-stranger-purple text-white text-xs rounded cursor-pointer transition-colors w-fit">
                                    <i class="fas fa-upload text-xs"></i>
                                    ${itemImage ? 'Changer photo' : 'Ajouter photo'}
                                </label>
                                <input id="upload-${item.id}" type="file" accept="image/*" onchange="handleImageUpload(${item.id}, event)" class="hidden">
                            </div>
                        </div>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        // Toggle owned status
        function toggleOwned(id) {
            state.owned[id] = !state.owned[id];
            updateProgress();
            renderHangables();
            renderAccessories();
            renderMissingItems();
            updateCostEstimation();
            checkCompletion();
        }

        // Handle image upload
        function handleImageUpload(id, event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onloadend = function() {
                    state.images[id] = reader.result;
                    if (!state.imageOrder.includes(id)) {
                        state.imageOrder.push(id);
                    }
                    renderHangables();
                    renderAccessories();
                    renderGallery();
                    document.getElementById('gallery-count').textContent = state.imageOrder.length;
                };
                reader.readAsDataURL(file);
            }
        }

        // Remove image
        function removeImage(id) {
            delete state.images[id];
            state.imageOrder = state.imageOrder.filter(itemId => itemId !== id);
            renderHangables();
            renderAccessories();
            renderGallery();
            document.getElementById('gallery-count').textContent = state.imageOrder.length;
        }

        // Handle profile photo
        function handleProfilePhoto(files) {
            if (files && files[0]) {
                const reader = new FileReader();
                reader.onloadend = function() {
                    state.profile.photo = reader.result;
                    document.getElementById('profile-photo-placeholder').classList.add('hidden');
                    const display = document.getElementById('profile-photo-display');
                    display.style.backgroundImage = `url(${state.profile.photo})`;
                    display.classList.remove('hidden');
                };
                reader.readAsDataURL(files[0]);
            }
        }

        // Render gallery
        function renderGallery() {
            const galleryContent = document.getElementById('gallery-content');
            const emptyGallery = document.getElementById('empty-gallery');

            if (state.imageOrder.length === 0) {
                emptyGallery.classList.remove('hidden');
                galleryContent.classList.add('hidden');
                return;
            }

            emptyGallery.classList.add('hidden');
            galleryContent.classList.remove('hidden');
            galleryContent.innerHTML = '';

            state.imageOrder.forEach((itemId, index) => {
                const item = [...collectionData.hangables, ...collectionData.accessories].find(i => i.id === itemId);
                if (!item || !state.images[itemId]) return;

                const card = document.createElement('div');
                card.className = 'card overflow-hidden';
                card.innerHTML = `
                    <div class="relative">
                        <img src="${state.images[itemId]}" alt="${item.name}" class="w-full h-64 object-cover">
                        <div class="absolute top-3 left-3 bg-black/70 text-white px-2.5 py-1 rounded-full text-sm font-semibold">
                            #${index + 1}
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="font-bold text-white text-lg">${item.name}</h3>
                        <p class="text-gray-400 text-sm mt-1">Code: ${item.code}</p>
                        <div class="flex gap-2 mt-2">
                            ${item.variant ? '<span class="text-xs bg-stranger-purple/20 text-stranger-purple px-2 py-0.5 rounded">Upside Down</span>' : ''}
                            ${item.type ? '<span class="text-xs bg-blue-500/20 text-blue-300 px-2 py-0.5 rounded">Accessoire</span>' : ''}
                        </div>
                    </div>
                `;
                galleryContent.appendChild(card);
            });
        }

        // Render missing items
        function renderMissingItems() {
            const allItems = [...collectionData.hangables, ...collectionData.accessories];
            const missingItems = allItems.filter(item => !state.owned[item.id]);
            const missingList = document.getElementById('missing-items-list');
            const missingContainer = document.getElementById('missing-items');

            if (missingItems.length === 0) {
                missingContainer.classList.add('hidden');
                return;
            }

            missingContainer.classList.remove('hidden');
            missingList.innerHTML = '';

            missingItems.forEach(item => {
                const itemEl = document.createElement('span');
                itemEl.className = 'bg-gray-800/50 text-gray-300 px-3 py-1.5 rounded-full text-sm';
                itemEl.textContent = item.name;
                missingList.appendChild(itemEl);
            });
        }

        // Update progress
        function updateProgress() {
            const allItems = [...collectionData.hangables, ...collectionData.accessories];
            const ownedCount = Object.values(state.owned).filter(Boolean).length;
            const totalCount = allItems.length;
            const progress = (ownedCount / totalCount) * 100;

            // Update counts
            document.getElementById('progress-count').textContent = `${ownedCount}/${totalCount}`;
            document.getElementById('progress-bar').style.width = `${progress}%`;

            // Update section counts
            const ownedHangables = collectionData.hangables.filter(h => state.owned[h.id]).length;
            const ownedAccessories = collectionData.accessories.filter(a => state.owned[a.id]).length;

            document.getElementById('hangables-count').textContent = `( ${ownedHangables}/14 )`;
            document.getElementById('accessories-count').textContent = `( ${ownedAccessories}/10 )`;
        }

        // Update cost estimation
        function updateCostEstimation() {
            const allItems = [...collectionData.hangables, ...collectionData.accessories];
            const ownedCount = Object.values(state.owned).filter(Boolean).length;
            const totalCount = allItems.length;
            const missingCount = totalCount - ownedCount;

            // Calculate costs (5.00 CHF per pack of 3, 1.50 CHF per single)
            const packsNeeded = Math.floor(missingCount / 3);
            const singlesNeeded = missingCount % 3;
            const remainingCost = (packsNeeded * 5.00) + (singlesNeeded * 1.50);

            const spentPacks = Math.floor(ownedCount / 3);
            const spentSingles = ownedCount % 3;
            const spentAmount = (spentPacks * 5.00) + (spentSingles * 1.50);

            document.getElementById('spent-amount').textContent = `${spentAmount.toFixed(2)} CHF`;
            document.getElementById('remaining-amount').textContent = `${remainingCost.toFixed(2)} CHF`;
        }

        // Check completion
        function checkCompletion() {
            const allItems = [...collectionData.hangables, ...collectionData.accessories];
            const ownedCount = Object.values(state.owned).filter(Boolean).length;
            const totalCount = allItems.length;

            document.getElementById('completion-message').classList.toggle('hidden', ownedCount !== totalCount);
        }

        // Initialize the app
        document.addEventListener('DOMContentLoaded', function() {
            // Make sure login screen is visible initially
            document.getElementById('login-screen').style.display = 'flex';
            document.getElementById('main-app').style.display = 'none';
        });
    </script>
</body>
</html>